Xcursor.size: 16
Xcursor.theme: Vanilla-DMZ-AA

*background: #000000
*foreground: #ffffff

xterm*loginShell: true
xterm*utf8: True
xterm*font: -*-terminus-medium-*-*-*-14-*-*-*-*-*-iso10646-1
xterm*saveLines: 30000
xterm*fastScroll: True
xterm*termName: xterm-256color
! A more readable dark blue
xterm*color12: #1A85FF

URxvt*scrollstyle: plain
URxvt*scrollBar: false
URxvt*background: Black
URxvt*foreground: White
! URxvt*font: xft:Terminus:pixelsize=12
URxvt*font: xft:Terminus:pixelsize=14:antialias=false
! A more readable dark blue
URxvt*color12: #1A85FF
URxvt*saveLines: 30000
URxvt*termName: rxvt-256color

! needed for undistract-me
!URxvt*loginShell: true
